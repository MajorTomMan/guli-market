<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.gulimall.ware.dao.WareSkuDao">

    <resultMap id="wareSkuMap" type="com.atguigu.gulimall.common.MappingGenerator.entity.WareSkuEntity">
        <result column="id" jdbcType="BIGINT" property="id" />
        <result column="sku_id" jdbcType="BIGINT" property="skuId" />
        <result column="ware_id" jdbcType="BIGINT" property="wareId" />
        <result column="stock" jdbcType="INTEGER" property="stock" />
        <result column="sku_name" jdbcType="VARCHAR" property="skuName" />
        <result column="stock_locked" jdbcType="INTEGER" property="stockLocked" />
    </resultMap>
    <update id="addStock">
        update `wms_ware_sku` set stock=stock+#{skuNum} where sku_id=#{skuId} and ware_id=#{wareId}
    </update>
    <select id="getSkuStock" resultMap="java.lang.Long">
        select sum(stock-stock_locked) from `wms_ware_sku` where sku_id=#{skuId}
    </select>
</mapper>